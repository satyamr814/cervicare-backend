# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cervicare_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3000

# Environment
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Google Sheets Integration
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id
GOOGLE_SHEETS_CREDENTIALS_PATH=./google-credentials.json
# For Render deployment, use inline JSON:
# GOOGLE_SHEETS_CREDENTIALS={"type":"service_account",...}

# Automation & Webhooks
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/cervicare
WEBHOOK_SECRET=your-webhook-secret

# Admin Configuration
ADMIN_KEY=your-admin-key-here
ADMIN_EMAIL=admin@cervicare.com
